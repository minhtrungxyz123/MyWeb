@model List<MyWeb.ViewModels.Catalog.Categories.CategoryViewModel>
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer _loc;
@{
    var culture = CultureInfo.CurrentCulture.Name;
}
<div id="sidebar" class="span3">
    <ul id="sideManu" class="nav nav-tabs nav-stacked">
        @{
            var parents = Model.Where(x => x.ParentId == null);
        }
        @for (int index = 0; index < parents.Count(); index++)
        {
            var parent = parents.ElementAt(index);
            var children = Model.Where(x => x.ParentId == parent.Id);
            if (children.Any())
            {
                <li class="subMenu open">
                    <a> @parent.Name</a>
                    <ul>
                        @foreach (var items in children)
                        {
                            <li><a class="active" href="/@culture/@_loc["categoryUrl"]/@items.Id"><i class="icon-chevron-right"></i>@items.Name </a></li>

                        }
                    </ul>
                </li>
            }
            else
            {
                <li><a href="/@culture/@_loc["categoryUrl"]/@parent.Id">@parent.Name</a></li>

            }
        }
    </ul>
    <br />
    <div class="thumbnail">
        <img src="/themes/images/payment_methods.png" title="Bootshop Payment Methods" alt="Payments Methods">
        <div class="caption">
            <h5>Phương thức thanh toán</h5>
        </div>
    </div>
    <div class="thumbnail">
        <img src="data:image/png;base64," />
        <div class="caption">
            <a href="https://localhost:1999" style="font-size: initial; margin: 12px 25px;">
            Tư vấn trực tiếp với Admin
            </a>
        </div>
    </div>
</div>